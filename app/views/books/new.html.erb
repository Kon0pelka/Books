<% provide(:title, 'Add book') %>
<h1>Add book</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@book) do |f|%>
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
      <select name="autor_id" id="autor_id">
        <% @autors.each do |autor| %>
          <option value=<%=autor.id%>><%=autor.first_name%> <%=autor.second_name%></option>
        <% end %>
      </select>
      <%= f.label :picture %>
      <%= f.file_field :picture %>
      <%= f.label :description, "Confirmation" %>
      <%= f.text_field :description, class: 'form-control' %>
      <%= f.submit "Create book", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>  