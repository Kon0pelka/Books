<% provide(:title, @book.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
        <%= image_tag @book.picture, size: "360x500" %>
    </section>
  </aside>
  <div class="col-md-8">
      <h1>     
         <%= @book.name %>
      </h1>
      <h3>Autor: <%= @autor.first_name%> <%= @autor.second_name%></h3>
      <h3>Description this (<%= @book.name %>)</h3>
      <%= @book.description %>
  </div>
  <div class="col-md-8">
    <% if @book.comments.any? %>
      <h3>Comments (<%= @book.comments.count %>)</h3>
      <ol class="microposts">
        <% @comments.each do |comment|%>
          <%= render comment %>
        <% end %>
      </ol>
    <% end %>
  </div>
  <div class="micropost_form">
      <%= render 'shared/comment_form' %>
  </div>
</div>