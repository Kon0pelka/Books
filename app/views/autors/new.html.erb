<% provide(:title, 'Add Autor') %>
<h1>Add Autor</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@autor) do |f|%>
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control' %>
      <%= f.label :second_name %>
      <%= f.text_field :second_name, class: 'form-control' %>
      <%= f.submit "Create Autor", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>  