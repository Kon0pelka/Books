<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if current_user.admin? && user_signed_in? %>
    | <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
    <% if current_user != user %>
      <% if user.admin?%>
        | <%= link_to "delete admin routes", {:controller => "users", :action => "set_destroy_admin", :id => user.id },
                                      data: { confirm: "You sure?" } %>
      <% else %>
        | <%= link_to "set admin", {:controller => "users", :action => "set_destroy_admin", :id => user.id },
                                      data: { confirm: "You sure?" } %>
      <% end %>
    <% end %>
  <% end %>
</li>